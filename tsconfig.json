{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react",
    "outDir": "./build",
    "rootDir": "./src",
    "declaration": true,
    "noImplicitAny": false,
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "@types/*.ts",
  ],
  "exclude": [
    "build",
    "coverage"
  ]
}
